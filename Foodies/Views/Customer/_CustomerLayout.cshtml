@using System.Security.Claims
@{
    ViewData["Title"] = "Customer Home";
    ViewData["CustomersActive"] = "active";
    ViewData["RestaurantsActive"] = "";
    ViewData["MenusActive"] = "";
    var userName =     User.FindFirstValue(ClaimTypes.Name) as string;
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);

    // ViewData["UserName"] = userName;


}
<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap" rel="stylesheet">

    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] </title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/customer.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
<script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <div class="page-container d-flex flex-column customer-page ">
      <nav>
            <h1 class="logo-cst">
                <span>Foodies</span>
                <img src="~/images/logo.png" alt="logo" />
            </h1>
            <div class="btns">
                <a asp-action="Index" asp-controller="Customer" asp-route-id="@userId">Home</a>
                <a href="#">Setting </a>
                <a href="#">Cart</a>
                
            </div>
            <div>
                <img src="~/images/user.png"/>
                <h4>@userName</h4>
                <a class="link-success" asp-action="Logout" asp-controller="Account"><i class="fas fa-sign-out-alt"></i></a>
            </div>
      </nav>
        <div class="dynamic-section">
            @RenderBody()
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>