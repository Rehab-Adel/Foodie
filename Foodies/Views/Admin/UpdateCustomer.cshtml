@model Customer;
@{
    ViewData["Title"] = "Admin | Update Customer";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["CustomersActive"] = "active";
    ViewData["RestaurantsActive"] = "";
  
}


<form class="add-customer-form" asp-action="UpdateCustomer" asp-controller="Admin">
    <h1 class="title">Update Customer</h1>
    <div class="form-group">
        <label for="UserName">Update Customer User Name:</label>
        <input type="text" name="userName" value="@Model.Username" class="form-control" placeholder="Enter Customer User Name" required />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="email">Update Customer Email:</label>
        <input type="text" name="email" value="@Model.Email" class="form-control" placeholder="Enter  Email" required />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="phone">Update Customer Phone Number:</label>
        <input type="text" name="phone" value="@Model.Phone" class="form-control" placeholder="Enter  Phone" required />
        <span class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="address">Update Customer Address:</label>
        <input type="text" name="address" value="@Model.Address" class="form-control" placeholder="Enter  Address" required />
        <span class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label for="password">Update Customer password:</label>
        <input type="password" name="password" value="@Model.Password" class="form-control" placeholder="Enter  Password" required />
        <span class="text-danger"></span>
    </div>
    <div class="form-group my-3">
        <label for="ConfirmPassword">Confirm Updated Password:</label>
        <input type="password" name="ConfirmPassword" value="@Model.ConfirmPassword" class="form-control" placeholder="Confirm  Password" required />
        <span class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger alert-danger"></div>
    <button type="submit" class="btn btn-custom">Update</button>
</form>

